{
	"default_module": "powerline.segments.common",
	"segments": {	
		"left": [
			{
				"function": "battery",
				"args": {
					"gamify": true
				}
			}
		],
		"right": [
			{
				"function": "weather",
				"args": {
					"unit": "C",
					"location_query": "tilburg, netherlands"
				}
			},
			{
				"function": "system_load"
			},
			{
				"function": "external_ip",
				"args": {
					"query_url": "http://icanhazip.com/",
					"interval": 600
				}
			},
			{
				"function": "date",
        "args": {
					"format": "%d-%m-%Y",
				  "istime": false
				}
			},
			{
				"function": "date",
				"name": "time",
				"args": {
					"format": "%H:%M",
					"istime": true
				}
			},
			{
				"function": "hostname",
				"args": {
					"exclude_domain": true
				}
			}
		]
	}
}
